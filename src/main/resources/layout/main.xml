<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
  <MultiAutoCompleteTextView
      android:id="@+id/address"
      android:inputType="textPersonName"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:hint="@string/recipient_hint"/>
  <EditText
      android:id="@+id/body"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:inputType="textLongMessage|textMultiLine|textAutoCorrect|textAutoComplete"
      android:minLines="5"
      android:hint="@string/body_hint"/>
  <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/send_date"
        />
    <EditText
        android:id="@+id/time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:inputType="none"
        android:editable="false"
        android:focusable="false"
        android:hint="@string/time_hint"
        android:onClick="showTimePickerDialog"/>
    <EditText
        android:id="@+id/date"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:inputType="none"
        android:editable="false"
        android:focusable="false"
        android:hint="@string/date_hint"
        android:onClick="showDatePickerDialog"/>
  </LinearLayout>
  <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="Send sms to queue"
        android:src="@drawable/queue"
        android:onClick="queueSms"/>
    <ToggleButton
        android:id="@+id/sms_process"
        android:checked="false"
        android:textOn="@string/service_toggle_on"
        android:textOff="@string/service_toggle_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onToggleClicked"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear queue"
        android:onClick="clearQueue"/>
  </LinearLayout>
  <TextView
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="@string/sms_list"/>
</LinearLayout>
